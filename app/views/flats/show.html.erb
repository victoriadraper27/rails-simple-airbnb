      <div class="card">
        <div class="card-body">
          <h2 class="card-title"><%= @flat.name %></h2>
          <h5 class="card-subtitle mb-2 text-muted"><%= @flat.address %></h5>
        </div>
      </div>
    </div>
  </div>


  <div class="row">
    <div class="col-8">
      <div class="card ">
